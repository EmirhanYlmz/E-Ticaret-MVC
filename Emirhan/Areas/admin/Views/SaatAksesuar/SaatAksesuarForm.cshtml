@model Emirhan.Models.saataksesuar
@{
    ViewBag.Title = "SaatAksesuarForm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .field-validation-error {
        color: black;
    }
</style>

<div class="content-wrapper">

    <div class="container">
        <h2>Saat Ve Mücevher Ürünleri Form Sayfası</h2>

        @using (Html.BeginForm("Kaydet", "SaatAksesuar", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {


    <table class="table table-hover bg-gradient-white">
        <tr>
            <td>
                Foto
            </td>
            <td>
                @if (Model.resim != null)
                {
                    <img src="~/Content/img/@Model.resim" width="250" />
                }
                @Html.TextBoxFor(m => m.fotoFile, new { type = "file" })
                @if (ViewBag.HataFoto != null)
                {
                    <span class="field-validation-error" data-valmsg-for="fotoFile" data-valmsg-replace="true">@ViewBag.HataFoto</span>

                }
            </td>
        </tr>
        <tr>
            <td>
                Kategori
            </td>
            <td>
                @Html.DropDownListFor(m => m.kategori,
            new SelectList(Enum.GetValues(typeof(kkkkategori))),
            "Kategori")
            </td>
        </tr>

        <tr>
            <td>
                Başlık
            </td>
            <td>
                @Html.TextBoxFor(m => m.basllik, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.basllik)
            </td>
        </tr>


        <tr>
            <td>
                Ürün Bilgisi
            </td>
            <td>
                @Html.TextAreaFor(m => m.urunbilgi, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.urunbilgi)
            </td>
        </tr>
        <tr>
            <td>
                Fiyat
            </td>
            <td>
                @Html.TextBoxFor(m => m.fiyat, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.fiyat)
            </td>
        </tr>
        <tr>
            <td>
                Sıra
            </td>
            <td>
                @Html.TextBoxFor(m => m.sira, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.sira)
            </td>
        </tr>


        <tr>
            <td>
                <label> @Html.CheckBoxFor(m => m.aktifMi) Aktif mi ? </label>
            </td>
        </tr>


        <tr>
            <td>
            </td>
            <td>
                @Html.HiddenFor(m => m.resim)
                @Html.HiddenFor(m => m.sid)
                <input type="submit" value="Kaydet" class="btn btn-primary " />
            </td>
        </tr>
    </table>
        }
    </div>

</div>


@section altTaraf
    {
    <!-- summernote -->
    <link rel="stylesheet" href="~/Content/Admin/plugins/summernote/summernote-bs4.css">
    <!-- Summernote -->
    <script src="~/Content/Admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#icerik').summernote()
        })
    </script>
}

